@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/CHIACHI.css">
</head>
<body>

</body>
</html>
<div class="row justify-content-center">
    <div class="col-10 mt-5">
        <div class="card login-logout-card">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link" href="/Identity/Account/Login">
                            登入
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Identity/Account/Register">
                            註冊
                        </a>
                    </li>
                </ul>                
            </div>
            <div class="card-body">
                <div class="row justify-content-center">
                    
                    <div class="col-10 col-lg-6 my-4">
                        @RenderBody()
                    </div>
                    <div class="col-8 col-lg-6 wow fadeIn" data-wow-delay="0.5s" style="min-height: 400px;">
                        <div class="position-relative h-100">
                            <img class="position-absolute w-100 h-100 rounded" src="~/Images/About/about-4.jpg" style="object-fit: cover;">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @await RenderSectionAsync("Scripts",required:false)
    <script>
        $(function(){
            const currentPage = location.pathname;
            $('.nav-tabs li a').each(function(){
                const $this=$(this);
                if (currentPage.toLowerCase().indexOf($this.attr('href').toLowerCase()) !== -1) {
                    $this.addClass('active');
                }
            })
        })
    </script>
}