@{
    ViewData["Title"] = "AddToCart";
}

<h1>AddToCart</h1>

<h2>加入購物車</h2>
@*測試用*@

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>輸入購買數量</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" name="txtProductId" value="@ViewBag.ProductId" />
        <div class="form-group">
            數量
            <div class="col-md-10">
                @Html.TextBox("txtCount", "1",new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="購買" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("取消", "List")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
