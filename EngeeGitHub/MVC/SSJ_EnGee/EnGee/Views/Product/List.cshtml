@model IEnumerable<Engee.ViewModel.SSJ_ProductViewModel>


@{
    ViewBag.Title = "_Layout";
}
    <style>
        /*---- Categories調整start---- */
        .cattext a:hover {
            color: #e54862ca;
        }

        .cattext .text-decoration-none {
            color: #000000;
        }

        .flex-container {
            /* 調整字母排列 */
            display: flex;
            flex-wrap: wrap;
        }

        .flex-container li {
            /* 調整字母排列 */
            width: 33.33%;
            box-sizing: border-box;
            margin-bottom: 10px;
        }

        ul .cattext li {
            margin-bottom: 20px;
        }

        /*---- Categories調整end--- */

        /* -----card調整start---- */
        .card .card-img {
            max-height: 350px;
            min-height: 200px;
            max-width: 350px;
            min-width: 200px;
        }

        .card .card-img-overlay {
            display: none;
        }

        .card:hover .card-img-overlay {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 10px;
        }

        .card-img-overlay i:hover {
            color: #e54862ca;
        }

        .pagination .page-link {
            color: #4b3030;
        }

        .pagination .page-link:hover {
            background-color: #9f6666;
            color: #fff;
        }

   

        /* -----card調整end---- */
    </style>

