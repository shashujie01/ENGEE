                </ul>
            </div>

            <div class="col-lg-9 ">
                <div class="row border-0">
                    @*列出商品*@
                    @foreach (var products in Model.Products)
                    {
                    <div class="col-md-4 col-sm-6 col-xs-8 col-12 justify-card-center mb-4">
                       
                                <div class="card ">
                                <img class="card-img img-fluid" src="@products.ProductImagePath" alt="@products.ProductName" />
                            <div class="card-img-overlay ">
                                <ul class="list-unstyled">
                                    <li>
                                        <a class="btn bg-white text-black" href="shop-single.html">
                                            <i class="far fa-heart"></i>
                                        </a>
                                    </li>
                                    <li> 

                                         <a class="btn bg-white text-black mt-2" href="@Url.Action("Details", "Product", new { id = products.ProductId })">
                                            <i class="far fa-eye"></i>
                                        </a>
                                    </li>
                                    <li>
                                            <a href="@Url.Action("QuickAddToCart", "Shopping", new { productId = products.ProductId })" class="btn bg-white text-black mt-2 h3 text-decoration-none">
                                                <i class="fas fa-cart-plus"></i>
                                            </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-center">
                                    @Html.ActionLink(products.ProductName, "Details", "Product", new { id = products.ProductId }, new { @class = "h3 text-decoration-none" })
                            </div>
                            <div class="d-flex justify-content-center">
                                <ul class="list-unstyled ">
                                    <li>@products.ProductDescribe</li>
                                </ul>
                               
                            </div>
                            
                            <ul class="list-unstyled d-flex justify-content-center mb-1">
                                <li>
                                    <i class="text-warning fa fa-star"></i>
                                    <i class="text-warning fa fa-star"></i>
                                    <i class="text-warning fa fa-star"></i>
                                    <i class="text-muted fa fa-star"></i>
                                    <i class="text-muted fa fa-star"></i>
                                </li>
                            </ul>
                            <p class="text-center mb-0">@products.ProductUnitPoint</p>
                        </div>
                        
                    </div>
                    }
                </div>

                @*切換頁面*@
                <div class="row">
                    <ul class="pagination justify-content-end">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage - 1 })" tabindex="-1">Previous</a>
                        </li>

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                            </li>
                        }

                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage + 1 })">Next</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

</main>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    @*切換頁面JS*@
    $(document).ready(function ()
    {
        $('#contentOne, #contentTwo').on('show.bs.collapse', function ()
        {
            var id = $(this).attr('id');
            $('ul .collapse').not('#' + id).collapse('hide');
        });
    });
</script>